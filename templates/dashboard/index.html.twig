{% extends 'base.html.twig' %}

{% block title %}Hello DashboardController!{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="mt-3 mb-3">
                    <h1>Dashboard</h1>
                </div>
                <div class="mt-3 mb-3">
                    <a href={{ path('add_new_product') }}>+ Add new product</a>

                </div>

                <table class="table">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Picture</th>
                        <th scope="col">Price</th>
                        <th scope="col">createdAt</th>
                        <th scope="col">Available</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for product in products %}
                        <tr>
                            <th scope="row">{{ product.name }}</th>
                            <td><img src="{{ asset('pictures/' ~ product.picture) }}" alt="" width="50px" height="50px"></td>
                            <td>{{ product.price }}â‚¬</td>
                            <td>{{ product.createdAt | date('d/m/Y') }}</td>
                            {% if product.available == true %}
                                <td><a class="btn btn-danger" href="{{ path('update_product', {id: product.id}) }}">Remove</a></td>
                            {% else %}
                                <td><a class="btn btn-success" href="{{ path('update_product', {id: product.id}) }}">Add to sale</a></td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
